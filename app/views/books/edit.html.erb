<div class="container">
  <div class="row">
    <div class="top-message col-md-offset-3 col-md-6">
      <h1>Editing Book</h1>

      <div class="new-book">
      <!-- form_with部分。/books宛てにPOSTメソッドを実行 -->
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <%= f.label :Title %><br />
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %><br />
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-primary form-control" %>
        </div>
      <% end %>
      <%= link_to "Show" , book_path(@book.id)  %> | <%= link_to "Back" , books_path %>
    </div>
  </div>
</div>