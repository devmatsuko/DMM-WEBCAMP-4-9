<div class="container">
    <div class="row">
      <% unless @book.nil? %>
        <% if @book.errors.any? %>
          <div id="error_explanation",class="error-message">
            <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= "Error:" + message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>
      <div class="col-xs-3">
          <%= render 'users/profile', user: @user, newbook: @newbook %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <th colspan=1></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>
          <% unless @books.blank? %>
            <% @books.each do |f| %>
              <tr>
                <td>
                  <%= link_to attachment_image_tag(f.user, :profile_image, :fill, 40, 40, fallback: "no_image.png", size:"40x40"),user_path(f.user.id) %>
                </td>
                <td><%= link_to f.title, book_path(f.id) %></td>
                <td><%= f.body %></td>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
</div>