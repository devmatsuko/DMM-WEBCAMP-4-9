<h2>User info</h2>


<table class="table">
  <thead>
    <th colspan=2></th>
  </thead>
  <tr>
    <td>name:</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>introduction:</td>
    <td><%= user.introduction %></td>
  </tr>
</table>

<%= link_to " ", edit_user_path(user), class: "btn btn-default glyphicon glyphicon-wrench" %>

<h2><strong>New book</strong></h2>
<!-- form_with部分。/books宛てにPOSTメソッドを実行 -->
<%= form_with model: book, url:'/books', local:true do |f| %>
  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book', class:'btn btn-primary' %>
<% end %>
