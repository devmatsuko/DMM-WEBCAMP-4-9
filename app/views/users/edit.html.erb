<div class="container">
  <h2>User info</h2>
  <% unless @user.nil? %>
    <% if @user.errors.any? %>
      <div id="error_explanation",class="error-message">
        <h3><%= @user.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= "Error:" + message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <%= form_with model: @user,local: true do |f| %>

    <div class="form-group">
      <%= f.label :Name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :Image %><br />
      <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
      <%= f.attachment_field :profile_image, class: "user-edit-form" %>
    </div>

    <div class="form-group">
      <%= f.label :Introduction %>
      <%= f.text_area :introduction %>
    </div>

    <div class="form-group">
      <%= f.submit "Update User" %>
    </div>
  <% end %>
</div>